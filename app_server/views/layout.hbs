      </div>
    </div>
    
  </body>
  <script>
    Handlebars.registerHelper('ifEq', function(arg1, arg2, options){
      if(arg1 == arg2) {
        return options.fn(this);
      }
      return options.inverse(this);
    })
  </script>
</html>
